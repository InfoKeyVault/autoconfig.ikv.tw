<?xml version="1.0" encoding="utf-8"?>
<Autodiscover xmlns="http://schemas.microsoft.com/exchange/autodiscover/responseschema/2006">
    <!-- ref: https://github.com/gronke/email-autodiscover/blob/master/mail/autodiscover.xml -->
    <Response xmlns="http://schemas.microsoft.com/exchange/autodiscover/outlook/responseschema/2006a">
        <Account>
            <AccountType>email</AccountType>
            <Action>settings</Action>
            <Image>https://ikv.tw/images/images/IKV-Tech_IKV-mini.png</Image>
            <ServiceHome>https://ikv.tw</ServiceHome>
            <Protocol>
                <Type>IMAP</Type>
                <TTL>1</TTL>
                <Server>imap.ikv.tw</Server>
                <Port>143</Port>
                <DomainRequired>on</DomainRequired>
                <DomainName>ikv.tw</DomainName>
                <SPA>off</SPA>
                <Encryption>TLS</Encryption>
                <AuthRequired>on</AuthRequired>
            </Protocol>
            <Protocol>
                <Type>POP3</Type>
                <TTL>1</TTL>
                <Server>pop3.ikv.tw</Server>
                <Port>110</Port>
                <DomainRequired>on</DomainRequired>
                <DomainName>ikv.tw</DomainName>
                <SPA>off</SPA>
                <Encryption>TLS</Encryption>
                <AuthRequired>on</AuthRequired>
            </Protocol>
            <Protocol>
                <Type>SMTP</Type>
                <TTL>1</TTL>
                <Server>smtp.ikv.tw</Server>
                <Port>587</Port>
                <DomainRequired>on</DomainRequired>
                <DomainName>ikv.tw</DomainName>
                <SPA>off</SPA>
                <Encryption>TLS</Encryption>
                <AuthRequired>on</AuthRequired>
                <UsePOPAuth>on</UsePOPAuth>
            </Protocol>
        </Account>
    </Response>
</Autodiscover>
